{% extends "layout.njk" %}

{% block content %}
    <div class="card table-container">
        <a href="/students/create">Novo</a>
        <table width="100%">
            <thead>
                <tr>
                    <th>Nome Completo</th>
                    <th>E-mail</th>
                    <th>Ano Escolar</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for student in students %}
                <tr>
                    <td> <span style="background-image: url({{student.avatar_url}})"></span>{{student.name}} </td>
                    <td> {{student.email}} </td>
                    <td> 
                        {% if student.escolaridade == "ano5" %}
                            5° Ano do Ensino fundamental
                        {% endif %}
                        {% if student.escolaridade == "ano6" %}
                            6° Ano do Ensino fundamental
                        {% endif%}
                        {% if student.escolaridade == "ano7" %}
                            7° Ano do Ensino fundamental
                        {% endif%}
                        {% if student.escolaridade == "ano8" %}
                            8° Ano do Ensino fundamental
                        {% endif%}
                        {% if student.escolaridade == "ano9" %}
                            9° Ano do Ensino fundamental
                        {% endif%}
                        {% if student.escolaridade == "medio1" %}
                            1° Ano do Ensino Médio
                        {% endif%}
                        {% if student.escolaridade == "medio2" %}
                            2° Ano do Ensino Médio
                        {% endif%}
                        {% if student.escolaridade == "medio1" %}
                            3° Ano do Ensino Médio
                        {% endif%}

                     </td>    
                    <td> <a href="estudantes/{{ student.id }}">Ver</a></td>
                </tr>
                {% endfor %}
            </tbody>    
        </table>
    </div>
{% endblock content %}