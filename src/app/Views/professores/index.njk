{% extends "layout.njk" %}

{% block content %}
    <div class="card table-container">
        <a href="/professores/create">Novo</a>
        <table width="100%">
            <thead>
                <tr>
                    <th>Nome Completo</th>
                    <th>Atendimento</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for teacher in teachers %}
                <tr>
                    <td> <span style="background-image: url({{teacher.avatar_url}})"></span>{{teacher.name}} </td>
                    <td> {{teacher.subjects_taught}} </td>    
                    <td> <a href="professores/{{teacher.id}}">Ver</a></td>
                </tr>
                {% endfor %}
            </tbody>    
        </table>
    </div>
{% endblock content %}