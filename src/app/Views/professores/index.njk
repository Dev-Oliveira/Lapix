{% extends "layout.njk" %}

{% block content %}
    <div class="card table-container">
        <div class="header">
                <a class="button" href="/professores/create">Novo</a>
                <form action="/professores" method="GET">
                <input
                    type="text"
                    name="filter"
                    placeholder="Nome ou Atendimento"
                    value={{filter}}
                >
                <button type="submit">Filtrar</button>
            </form>
        </div>

        <table width="100%">
            <thead>
                <tr>
                    <th>Nome Completo</th>
                    <th>Atendimento</th>
                    <th>Alunos</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for teacher in teachers %}
                <tr>
                    <td> <span style="background-image: url({{teacher.avatar_url}})"></span>{{teacher.name}} </td>
                    <td> {{teacher.subjects_taught}} </td>    
                    <td>{{teacher.total_students}}</td>
                    <td> <a href="professores/{{teacher.id}}">Ver</a></td>
                </tr>
                {% endfor %}
            </tbody>    
        </table>
    </div>
{% endblock content %}