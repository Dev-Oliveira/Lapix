{% extends "layout.njk" %}

{% block content %}
    
    <div class="card">
        <section 
            class="avatar" 
            style= "background: url({{estudante.avatar_url}}) no-repeat center center / cover;">
        </section>

        <section class="details">
            <form method="POST" action="/estudantes?_method=PUT" >
                    <h3>Editar Aluno</h3>

                    {% include 'estudantes/fields.njk'%}

                    <input type="hidden" name="id" value="{{estudante.id}}">

            </form>
            <form id="form-delete" action="/estudantes?_method=DELETE" method="post">

                <input type="hidden" name="id" value={{estudante.id}}>
                <button type="submit">Delete</button>

            </form>
        </section>
    </div>
    {% include '../confirm.njk'%}
{% endblock content %}