{% extends "layout.njk" %}

{% block content %}
    <div class="card">
        <section class="avatar" style= "background: url({{professor.avatar_url}})">

        </section>
        <section class="details">
            <h3>Detalhes</h3>
            <div class="item">
                <div>Professor</div>
                <div>{{professor.name}}</div>
            </div>
            <div class="item">
                <div>Idade</div>
                <div>{{professor.age}}</div>
            </div>
            <div class="item">
                <div>Grau de Escolaridade</div>
                <div>{{professor.escolaridade}}</div>
            </div>
            <div class="item">
                <div>Tipo de Aula</div>
                <div>{{professor.tipo_aula}}</div>
            </div>
            <div class="item">
                <div>Acompanhamento</div>
                <div>
						{% for atuacao in professor.atuacao %}
						<span> {{atuacao}} </span>
						{% endfor %}
				</div>
            </div>
            <div class="item">
                <div>Cadastrado em:</div>
                <div>{{professor.created_at}}</div>
            </div>

            <a href="#" class="button">Editar</a>
            
        </section>
    </div>
{% endblock content %}